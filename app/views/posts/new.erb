<%= javascript_include_tag 'tiny_mce/tiny_mce' %>

<script type="text/javascript">
  tinyMCE.init({
    mode     : 'exact',
    elements : 'items_content'
  });
</script>

<%= form_for @post, :as => :items do |f| %>
  <%= f.text_field :title %>
  <%= f.text_area :content %>
  <%= f.submit %>
<% end %>